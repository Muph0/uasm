{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo build",
            "command": "cargo",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "cargo test build",
            "command": "cargo",
            "args": [
                "test",
                "--no-run"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "cargo install",
            "command": "cargo",
            "args": [
                "install",
                "--path",
                "."
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
        },
    ]
}